---
import Card from "../../components/FoodCard.astro";
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const cenas = await getCollection("cenas");

export const prerender = true;
---

<Layout title="Cenas">
  <section class="flex flex-wrap justify-center gap-20">
    {
      cenas.map((cena) => (
        <Card
          title={cena.data.title}
          description={cena.data.description}
          image={cena.data.image}
        />
      ))
    }
  </section>
</Layout>
